/* pages/couses.wxss */

.page-body{
  padding: 10px;
  background-color: #f8f8f8;
  height: 100%;
}
.page-title{
  font-size: 22px;
  color: rgb(90, 90, 90);
  display: inline;
  padding-bottom: 5px;
  border-bottom: 2px solid grey
}
.artile-list{
  border: 1px solid #d8d8d8;
  border-radius: 5px;
  box-shadow: 0 2px 5px #efefef;
  padding: 20px;
  margin-top: 7px;
  height: 120rpx;
  position: relative;
  background-color: #fff;
}
.card-bar{
  position: absolute;
  top: 0px;
  width: 100%;
  height: 2px;
  margin-left: -20px;
}
.card-bar.level1{
  border-top: 2px solid #ffa600;
  box-shadow: 0 -2px 10px #ffc40091;
}
.card-bar.level2{
  border-top: 2px solid #32b5be;
  box-shadow: 0 -2px 10px #0080e87c
}
.card-bar.level3{
  border-top: 2px solid #7eac9c;
  box-shadow: 0 -2px 10px #98a83a91
}
.card-bar.level4{
  border-top: 2px solid #535353;
  box-shadow: 0 -2px 10px #8a8a8a7c
}
.pre-info{
  color: rgb(104, 104, 104);
}
.couse-title{
  /* border: 1px solid grey; */
  padding:4px;
  border-radius: 2px;
  font-size: 18px;
  color: rgb(73, 73, 73);
}
.couse-date{
  /* margin-left: 20px; */
  font-size: 12px;
  color: rgb(109, 109, 109);
}