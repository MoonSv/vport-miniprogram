/* pages/usercenter/usercenter.wxss */
page{background-color:#f9f8f9;}
.user-info{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    
    padding: 10rpx;
    height: 320rpx;
}
.user-avatar{
    margin-top: 10rpx;
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    border: 2px solid #fff;
    overflow: hidden;
    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2); 
}
.user-info-top{
  /* width: 100%; */
  height: 60px;
  background-color: #fff;
  padding: 18px;
  display: flex;
  justify-content: space-between;
}
.small-font{
  margin-top: 5px;
}

/* tab bar */
.nav{width:100%;height:100rpx;display:flex;flex-direction:row;}
.default{line-height:100rpx;text-align:center;flex:1;border-right:none;color:#5d5d5d;font-size:28rpx;}
.red{line-height:100rpx;text-align:center;color:#984b43;flex:1;border-right:none; border-bottom: 4rpx solid #984b43;font-size:28rpx;}
.show{display:block;text-align:center;line-height:200rpx;}
.hidden{display:none;text-align:center;line-height:200px;}

.main{
  margin-top: 5px;
  height: 100%;
  background-color: #fff;
}