/* pages/usercenter/usercenter.wxss */
.user-info{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    
    padding: 10rpx;
    height: 320rpx;
}
.user-avatar{
    margin-top: 10rpx;
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    border: 2px solid #fff;
    overflow: hidden;
    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2); 
}